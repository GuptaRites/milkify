
@{
    ViewData["Title"] = "UserLogin";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title text-center">
                        <img src="img/c3.jpg" class="rounded-circle" width="50" height="50"><br />
                        <span>Milkify</span>
                    </h5>
                    <form asp-controller="Home" asp-action="Index" method="POST">

                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                    <p class="mt-3 text-center">Don't have an account? <a asp-controller="User" asp-action="UserRegistration" >Sign up here</a></p>
                    <p class="text-center"><a asp-controller="User" asp-action="ForgetPassword" >Forgot your password?</a></p>
                </div>
            </div>
        </div>
    </div>
</div>