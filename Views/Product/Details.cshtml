@model milkify.Models.Product

@{
    ViewData["Title"] = "Product Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Product Details</h3>
        </div>
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-3 text-center">
                    <img src="@Url.Content("~/img/" + Model.ImagePath)"
                         alt="Product Image"
                         class="img-thumbnail rounded-circle"
                         height="150" width="150" />
                </div>
                <div class="col-md-9">
                    <dl class="row">
                        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Type)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.Type)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Title)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.Title)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Price)</dt>
                        <dd class="col-sm-9">₹ @Html.DisplayFor(m => m.Price)</dd>

                        <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Desc)</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(m => m.Desc)</dd>
                    </dl>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </div>
    </div>
</div>
