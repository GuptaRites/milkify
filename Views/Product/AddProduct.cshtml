@model milkify.Models.ProductViewModel

@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Add New Product</h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="~/img/c3.jpg" class="rounded-circle mb-2" width="60" height="60" alt="Milkify Logo" />
                        <h5 class="text-muted">Milkify Product Entry</h5>
                    </div>

                    <form asp-action="AddProduct" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Product Type</label>
                            <input asp-for="Type" class="form-control" placeholder="e.g., Dairy, Ghee, Paneer" />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Product Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter product name" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Price (₹)</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Desc" class="form-label">Description</label>
                            <textarea asp-for="Desc" class="form-control" rows="3" placeholder="Short product description"></textarea>
                            <span asp-validation-for="Desc" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="photo" class="form-label">Upload Product Image</label>
                            <input asp-for="photo" type="file" class="form-control" />
                            <span asp-validation-for="photo" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Create Product</button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">← Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
