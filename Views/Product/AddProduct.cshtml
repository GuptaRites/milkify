@model milkify.Models.ProductViewModel

@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient bg-primary text-white text-center rounded-top-4">
                    <h3 class="mb-1 fw-bold">🛒 Add New Product</h3>
                    <small class="fst-italic">Fill in the product details below</small>
                </div>
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <img src="~/img/milkyfy-logo.png" class="rounded-circle shadow-sm" width="70" height="70" alt="Milkify Logo" />
                        <h5 class="mt-2 text-muted">Milkify Product Entry</h5>
                    </div>

                    <form asp-action="AddProduct" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label fw-semibold">Product Type</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-tag-fill"></i></span>
                                <input asp-for="Type" class="form-control" placeholder="e.g., Dairy, Ghee, Paneer" />
                            </div>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label fw-semibold">Product Title</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-box-seam"></i></span>
                                <input asp-for="Title" class="form-control" placeholder="Enter product name" />
                            </div>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-semibold">Price (₹)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-currency-rupee"></i></span>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter price" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Desc" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Desc" class="form-control" rows="3" placeholder="Short product description"></textarea>
                            <span asp-validation-for="Desc" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="photo" class="form-label fw-semibold">Upload Product Image</label>
                            <input asp-for="photo" type="file" class="form-control" />
                            <span asp-validation-for="photo" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success fw-semibold shadow-sm">
                                <i class="bi bi-plus-circle me-1"></i> Add Product
                            </button>
                        </div>
                    </form>

                    <div class="mt-4 text-center">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left-circle"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
