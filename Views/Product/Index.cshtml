@model IEnumerable<milkify.Models.Product>

@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold">Product List</h2>
        <a class="btn btn-success shadow" asp-action="AddProduct">
            <i class="bi bi-plus-circle me-1"></i> Add Product
        </a>
    </div>

    @if (TempData["Succes"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Succes"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0 rounded-4">
                    <img src="@Url.Content("~/img/" + item.ImagePath)" class="card-img-top rounded-top-4" style="height: 200px; object-fit: cover;" alt="@item.Title" />
                    <div class="card-body">
                        <h5 class="card-title fw-semibold">@item.Type</h5>
                        <p class="card-text text-muted mb-1">Rs. @item.Price.ToString("0.00")</p>
                        <p class="text-truncate" title="@item.Desc">@item.Desc</p>
                    </div>
                    <div class="card-footer bg-white border-0 d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info text-primary">
                            <i class="bi bi-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
