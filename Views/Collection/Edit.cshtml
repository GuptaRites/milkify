@model milkify.Models.MilkCollection

@{
    ViewData["Title"] = "Edit Collection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h4 class="card-title text-center mb-4 text-primary">Edit Milk Collection</h4>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="FarmerName" class="form-label"></label>
                            <input asp-for="FarmerName" class="form-control" />
                            <span asp-validation-for="FarmerName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CollectionDate" class="form-label"></label>
                            <input asp-for="CollectionDate" class="form-control" type="date" />
                            <span asp-validation-for="CollectionDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RatePerLiter" class="form-label"></label>
                            <input asp-for="RatePerLiter" class="form-control" />
                            <span asp-validation-for="RatePerLiter" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MilkType" class="form-label"></label>
                            <input asp-for="MilkType" class="form-control" />
                            <span asp-validation-for="MilkType" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-control">
                                <option value="Pending">Pending</option>
                                <option value="Approved">Approved</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Save Changes" class="btn btn-success px-4" />
                            <a asp-action="Index" class="btn btn-secondary ms-3 px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
