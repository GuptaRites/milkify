@model milkify.Models.MilkCollection

@{
    ViewData["Title"] = "Add Collection";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-center">Add Milk Collection</h4>
<hr />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <h5 class="card-title text-center mb-3">
                        <img src="~/img/milkyfy-logo.png" class="rounded-circle" width="50" height="50" alt="Logo"><br />
                        <span>Milkify</span>
                    </h5>
                    <form asp-action="AddCollection">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="FarmerName" class="control-label"></label>
                            <input asp-for="FarmerName" class="form-control" />
                            <span asp-validation-for="FarmerName" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CollectionDate" class="control-label"></label>
                            <input asp-for="CollectionDate" type="date" class="form-control" />
                            <span asp-validation-for="CollectionDate" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Quantity" class="control-label"></label>
                            <input asp-for="Quantity" class="form-control" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RatePerLiter" class="control-label"></label>
                            <input asp-for="RatePerLiter" class="form-control" />
                            <span asp-validation-for="RatePerLiter" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="MilkType" class="control-label"></label>
                            <select asp-for="MilkType" class="form-control">
                                <option value="">-- Select Milk Type --</option>
                                <option value="Cow">Cow</option>
                                <option value="Buffalo">Buffalo</option>
                                <option value="Goat">Goat</option>
                            </select>
                            <span asp-validation-for="MilkType" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control">
                                <option value="">-- Select Status --</option>
                                <option value="Approved">Approved</option>
                                <option value="Pending">Pending</option>
                                <option value="Rejected">Rejected</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group text-center">
                            <input type="submit" value="Add Collection" class="btn btn-primary px-4" />
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
