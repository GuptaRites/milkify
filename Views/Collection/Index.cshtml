@model IEnumerable<milkify.Models.MilkCollection>

@{
    ViewData["Title"] = "Milk Collections";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4 class="text-primary">Milk Collection Records</h4>
        <a class="btn btn-success" asp-action="AddCollection">
            <i class="bi bi-plus-circle"></i> New Collection
        </a>
    </div>

    @if (TempData["Succes"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Succes"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-hover shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FarmerName)</th>
                    <th>@Html.DisplayNameFor(model => model.CollectionDate)</th>
                    @* <th>@Html.DisplayNameFor(model => model.Quantity)</th> *@
                    @* <th>@Html.DisplayNameFor(model => model.RatePerLiter)</th> *@
                    <th>@Html.DisplayNameFor(model => model.MilkType)</th>
                    @* <th>@Html.DisplayNameFor(model => model.TotalPrice)</th> *@
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FarmerName</td>
                        <td>@item.CollectionDate.ToShortDateString()</td>
                        @* <td>@item.Quantity</td> *@
                        @* <td>@item.RatePerLiter</td> *@
                        <td>@item.MilkType</td>
                        @* <td>@item.TotalPrice</td> *@
                        <td>@item.Status</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-primary me-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-info text-white me-1" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
