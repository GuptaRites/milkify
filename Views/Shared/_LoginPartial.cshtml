@using Microsoft.AspNetCore.Identity
@using milkify.Areas.Identity.Data

@inject SignInManager<MilkifyUser> SignInManager
@inject UserManager<MilkifyUser> UserManager

<div class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <ul>
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
                </form>
            </li>
    </ul>
}
else
{
        <div class="d-flex justify-content-end mb-3">
            <div class="p-2 "> <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a></div>
            <div class="p-2 "><a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a></div>
            
        </div>
   
}
</div>
